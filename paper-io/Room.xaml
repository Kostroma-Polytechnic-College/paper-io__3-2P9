<Window x:Class="paper_io.Room"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:paper_io"
        mc:Ignorable="d"
        Title="Room" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer x:Name="CanvasViewer"   HorizontalScrollBarVisibility="Hidden"  VerticalScrollBarVisibility="Hidden" Grid.ColumnSpan="2">
            <Canvas x:Name="Canvas" IsHitTestVisible="False" Height="20" Width="19">
                <Rectangle x:Name="Player" Fill="Red" Canvas.Left="0" Canvas.Top="0" Height="20" Width="20" />
            </Canvas>
        </ScrollViewer>

    </Grid>
</Window>
